{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug on Google Chrome",
      "preLaunchTask": "npm: dev",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "runtimeArgs": [
        "--auto-open-devtools-for-tabs"
      ]
    },
    {
      "name": "Debug on Firefox",
      "preLaunchTask": "npm: dev",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}"
    }
  ]
}